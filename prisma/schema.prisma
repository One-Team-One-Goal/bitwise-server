generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Lesson {
  id        Int       @id @default(autoincrement())
  title     String
  topics    Topic[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Topic {
  id             Int       @id @default(autoincrement())
  title          String
  lesson         Lesson    @relation(fields: [lessonId], references: [id])
  lessonId       Int
  contentText    String
  displayContent Json?     // Changed from String to Json to store structured blocks
  tags           String[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Attempt {
  id         Int      @id @default(autoincrement())
  userId     String
  questions  Json     // Store the generated questions for this attempt
  responses  Json?    // Store the user's answers (optional until submitted)
  score      Int?     // Store the score (optional until submitted)
  feedback   String?  // Adaptive feedback (optional until submitted)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}